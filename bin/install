#!/bin/env bash

set -Eeuo pipefail
trap cleanup SIGINT SIGTERM ERR

cleanup() {
  trap - SIGINT SIGTERM ERR
  rm -rf "$BUN_INSTALL"
  echo
  echo -e "Cleanup: Something went wrong!"
  echo
  echo "$(caller): ${BASH_COMMAND}"
}

fail() {
  echo -e "Fail: $*"
  exit 1
}

install_bun() {
  local version=$2
  local install_type=$1
  local install_path=$3

  if [ "$install_type" != "version" ]; then
    fail "asdf-deno supports release installs only"
  fi

  local platform
  local architecture
  local archive_format
  local uncompress_command
  local archive_file

  case "$OSTYPE" in
    darwin*) platform="darwin" ;;
    linux*) platform="linux" ;;
    *) fail "Unsupported platform" ;;
  esac

  case "$(uname -m)" in
    x86_64) architecture="x64" ;;
    arm64) architecture="aarch64" ;;
    *) fail "Unsupported architecture" ;;
  esac

  archive_format="zip"
  archive_file="bun-${platform}-${architecture}.${archive_format}"
  uncompress_command="unzip -d ${install_path}/bin"

  local download_url="https://github.com/oven-sh/bun/releases/download/bun-v${version}/${archive_file}"
  local source_path="${install_path}/bin/bun.${archive_format}"

  echo "Downloading and installing bun..."
  curl --create-dirs -sfL -o "$source_path" "$download_url"
  $uncompress_command "$source_path" && mv "bun-${platform}-${architecture}/bun" "${install_path}/bin"
  rm -f "${source_path}"

  echo "The installation was successful"
}

install_bun "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
